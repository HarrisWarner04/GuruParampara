<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> | Guru Parampara</title>
  <meta name="description" content="Read our comprehensive Ayurvedic eBook - Free guide to holistic wellness and traditional healing practices.">
  <meta name="theme-color" content="#1a5f3a">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

  <!-- Bootstrap & Custom Styles -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/css/styles.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/images/logo.jpeg">

  <style>
    html, body {
      height: 100%;
      overflow-x: hidden;
      background: var(--light-bg);
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    /* ===== Ebook Layout ===== */
    .ebook-container {
      min-height: calc(100vh - 200px);
      padding: 2rem 0;
    }

    .ebook-header {
      background: white;
      padding: 2rem;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow-md);
      margin-bottom: 2rem;
      text-align: center;
    }

    .ebook-title {
      color: var(--primary);
      font-size: 2rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
    }

    .ebook-subtitle {
      color: var(--text-secondary);
      font-size: 1.05rem;
    }

    .pdf-viewer-container {
      background: white;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow-lg);
      padding: 1.5rem;
      overflow: hidden;
    }

    .pdf-viewer-wrapper {
      width: 100%;
      height: calc(100vh - 350px);
      min-height: 600px;
      border: 2px solid var(--secondary);
      border-radius: 12px;
      overflow: hidden;
      position: relative;
    }

    iframe {
      width: 100%;
      height: 100%;
      border: none;
      display: block;
      pointer-events: none;
    }

    .ebook-actions {
      display: flex;
      justify-content: center;
      margin-top: 1.5rem;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .btn-fullscreen {
      background: var(--accent);
      color: white;
      padding: 12px 32px;
      border-radius: 50px;
      font-weight: 600;
      transition: all 0.3s ease;
      border: none;
      box-shadow: var(--shadow-md);
    }

    .btn-fullscreen:hover {
      background: var(--accent-glow);
      transform: translateY(-2px);
    }

    /* ===== Protection Overlay ===== */
    #blurOverlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(25px);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 99999;
      font-weight: 700;
      font-size: 1.3rem;
      color: var(--primary);
      visibility: hidden;
      transition: 0.3s ease;
    }

    @media (max-width: 768px) {
      .ebook-title { font-size: 1.6rem; }
      .pdf-viewer-wrapper { height: calc(100vh - 420px); min-height: 500px; }
      .btn-fullscreen { width: 100%; }
    }
  </style>
</head>

<body class="ebook-page" oncontextmenu="return false" onselectstart="return false" ondragstart="return false">
  <div id="blurOverlay">‚ö†Ô∏è Viewing Restricted</div>

  <!-- Background -->
  <div class="animated-bg"></div>

  <!-- Header -->
  <%- include('partials/header') %>

  <!-- ===== Ebook Viewer Section ===== -->
  <section class="section-enhanced">
    <div class="container">
      <div class="ebook-container fade-in">
        <div class="ebook-header fade-in">
          <h1 class="ebook-title">üìñ Our Ayurvedic eBook</h1>
          <p class="ebook-subtitle">
            Discover the wisdom of traditional Ayurvedic healing and holistic wellness practices
          </p>
        </div>

        <div class="pdf-viewer-container fade-in">
          <div class="pdf-viewer-wrapper">
            <iframe
              id="pdfViewer"
              src="/public/pdf-protected-viewer#toolbar=0&navpanes=0&scrollbar=0"
              sandbox="allow-same-origin allow-scripts"
              title="Ayurvedic eBook PDF"
            ></iframe>
          </div>

          <div class="ebook-actions">
            <button class="btn btn-fullscreen" id="fullscreenBtn" onclick="toggleFullscreen()">
              üîç Fullscreen View
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // üîí Prevent context menu, selection, copy, etc.
    ['contextmenu', 'copy', 'cut', 'selectstart', 'dragstart'].forEach(evt => {
      document.addEventListener(evt, e => e.preventDefault());
    });

    // üß† Block dev tools and print/save shortcuts
    document.addEventListener('keydown', e => {
      const blocked = [
        e.key === 'F12',
        (e.ctrlKey && ['s','S','p','P','u','U','c','C'].includes(e.key)),
        (e.ctrlKey && e.shiftKey && ['I','J','C'].includes(e.key))
      ];
      if (blocked.some(Boolean)) e.preventDefault();
    });

    // üå´Ô∏è Blur overlay on tab change (screenshot deterrent)
    const blurOverlay = document.getElementById('blurOverlay');
    document.addEventListener('visibilitychange', () => {
      blurOverlay.style.visibility = document.hidden ? 'visible' : 'hidden';
    });

    // ‚ö†Ô∏è Detect DevTools
    const threshold = 160;
    setInterval(() => {
      if (window.outerWidth - window.innerWidth > threshold ||
          window.outerHeight - window.innerHeight > threshold) {
        document.body.innerHTML =
          "<h2 style='text-align:center;margin-top:25%;color:red;'>‚ö†Ô∏è Developer Tools Detected - Access Denied</h2>";
      }
    }, 1000);

    // üö´ Disable console
    (function() {
      const methods = ['log','debug','info','warn','error'];
      for (let m of methods) console[m] = () => {};
    })();

    // üîç Fullscreen toggle
    function toggleFullscreen() {
      const container = document.querySelector('.pdf-viewer-wrapper');
      if (!document.fullscreenElement) {
        container.requestFullscreen?.();
      } else {
        document.exitFullscreen?.();
      }
    }

    document.addEventListener('fullscreenchange', () => {
      const btn = document.getElementById('fullscreenBtn');
      btn.textContent = document.fullscreenElement
        ? '‚ùå Exit Fullscreen'
        : 'üîç Fullscreen View';
    });
  </script>
</body>
</html>
